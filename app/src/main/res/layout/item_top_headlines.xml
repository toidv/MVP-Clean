<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/article_item_margin"
    android:id="@+id/ln_item"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_article"
        android:layout_width="@dimen/article_dimension"
        android:layout_height="@dimen/article_dimension"
        android:layout_margin="@dimen/article_image_margin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/article_item_margin"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_headline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="News headline title" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_headline_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="News description news description" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_headline_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            tools:text="timestamp" />
    </LinearLayout>
</LinearLayout>